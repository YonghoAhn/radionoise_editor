<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_Editor"
        xmlns:wpfeditor="clr-namespace:wpfeditor;assembly=wpfeditor" xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="Code_Editor.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="323.333" Width="506" SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <Style TargetType="{x:Type Paragraph}">
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,0" Background="#FF252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="303*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="410*"/>
        </Grid.ColumnDefinitions>
        <TabControl TabStripPlacement="Bottom" Grid.Row="2" Background="#FF3E3E40" BorderBrush="#FF3F3F46">
            <TabItem Header="Proj" Margin="0,0,-17,0" HorizontalAlignment="Left" Width="50" BorderBrush="#FF3F3F46" Foreground="White">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF252526"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FF252526"/>
            </TabItem>
            <TabItem Header="Chat" Margin="2,0,-15,0" Height="20" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.45" Foreground="White">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF252526"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FF3F3F46">
                    <TextBox x:Name="SendTXT" TextWrapping="Wrap" Text="Send Messages" Height="23" VerticalAlignment="Bottom" Background="#FF252526" BorderBrush="#FF252526" Foreground="White" KeyDown="TextBox_KeyDown"/>
                    <TextBox x:Name="Message" TextWrapping="Wrap" Text="Messages" Margin="0,0,0,23" Background="#FF252526" BorderBrush="#FF252526" Foreground="White"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Grid Grid.ColumnSpan="2" Background="#FF3F3F46">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="MenuItem_Click" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Cut" />
                    <MenuItem Header="_Paste" />
                    <Separator />
                    <MenuItem Header="_Undo" />
                    <MenuItem Header="_Redo" />
                </MenuItem>
            </Menu>
        </Grid>

        <avalonedit:TextEditor ShowLineNumbers="True" SyntaxHighlighting="C#" Name="CodeEditor" FontFamily="Consolas" Padding="2,0,0,0" Grid.Column="1" Grid.Row="1" Background="#FF252526" Foreground="White"/>

    </Grid>
</Window>
